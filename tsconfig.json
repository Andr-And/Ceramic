{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017",
      "es6"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSources": true,
    "pretty":true
  },
  "include": [
    "./src/**/*",
    "./config/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}